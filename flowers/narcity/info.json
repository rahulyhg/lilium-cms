{
    "uName" : "narcity",
    "dName" : "Narcity Theme",
    "entry": "narcity.js",
    "contexts" : {
        "article" : "article.lml",
        "styledpage" : "page.lml",
        "amp" : "amp.lml",
        "next" : "article.lml",
        "page" : "page.lml",
        "home" : "homepage.lml",
        "city" : "city.lml",
        "search" : "archive.lml",
        "latests" : "archive.lml",
        "archive" : "archive.lml",
        "author" : "archive.lml",
        "category" : "archive.lml",
        "topic" : "archive.lml",
        "tags" : "archive.lml",
        "404" : "404.lml"
    },
    "templates" : {
        "article" : [
            {"displayname" : "Narcity Article", "file" : "article"}
        ],
        "archive" : [
            {"displayname" : "Narcity Topic Archive", "file" : "archive"},
            {"displayname" : "Narcity City Archive", "file" : "city"}
        ],
        "home" : [
            {"displayname" : "Narcity City", "file" : "homepage"},
            {"displayname" : "Brand", "file" : "homepage"}
        ]
    },
    "settingForm" : {
        "language" : {
            "type" : "select",
            "attr" : {
                "displayname" : "Language",
                "datasource" : [
                    {"displayName" : " - Default parent's language -", "name" : ""},
                    {"displayName" : "Canadian English", "name" : "en-ca"},
                    {"displayName" : "American English", "name" : "en-us"},
                    {"displayName" : "Français Canadien", "name" : "fr-ca"},
                    {"displayName" : "Français de France", "name" : "fr-fr"}
                ]
            },
            "default" : "en-ca"
        },
        "logolink" : {"type" : "text", "attr" : {"displayname" : "Topbar logo link"}, "default" : "/"},
        "maincolor" : {"type" : "text", "attr" : {"displayname" : "Main Color"}, "default" : "#FF2634"},
        "headercolor" : {"type" : "text", "attr" : {"displayname" : "Header Color"}, "default" : "#FF2634"},
        "buttoncolor" : {"type" : "text", "attr" : {"displayname" : "Button Color"}, "default" : "#DDD"},
        "buttontextcolor" : {"type" : "text", "attr" : {"displayname" : "Button Text Color"}, "default" : "#FF2634"},
        "archivearticlecount" : {"type" : "number", "attr" : {"displayname" : "Number of article max per archive page"}, "default" : 18},
        "fullwidthsize" : {"type" : "number", "attr" : {"displayname" : "Full width size (px)"}, "default" : 1024},
        "articlewidthsize" : {"type" : "number", "attr" : {"displayname" : "Article width size (px)"}, "default" : 640},
        "logo" : {"type" : "text", "attr" : {"displayname" : "Logo"}, "default" : "/static/media/lmllogo.png"},
        "logowidth" : {"type" : "number", "attr" : {"displayname" : "Logo width"}, "default" : 105},
        "logoheight" : {"type" : "number", "attr" : {"displayname" : "Logo height"}, "default" : 85},
        "favicon" : {"type" : "text", "attr" : {"displayname" : "Fav Icon"}, "default" : "/static/media/lmllogo.png"},
        "networkname" : {"type" : "text", "attr" : {"displayname" : "Name on the Network"}, "default" : "Montreal"},
        "chartbeatsection" : {"type" : "text", "attr" : {"displayname" : "Chartbeat Section"}, "default" : "Stuff"},
        "cityname" : {"type" : "text", "attr" : {"displayname" : "City name"}, "default" : "Montreal"},
        "featuredyoutubeid" : {"type" : "text", "attr" : {"displayname" : "Featured YouTube video ID"}, "validations" : {"required" : false}, "default" : "none"},
        "mailchimpdigest" : {"type" : "text", "attr" : {"displayname" : "Mailchimp Digest ID"}, "default" : "#####"},
        "homepagesections" : {"type" : "stack",
            "attr" : {
                "displayname" : "Homepage sections",
                "scheme" : {
                    "columns" : [
                        {
                            "fieldName" : "catname",
                            "dataType" : "text",
                            "displayname" : "Category slug"
                        }, {
                            "fieldName" : "cattitle",
                            "dataType" : "text",
                            "displayname" : "Homepage section title"
                        }
                    ]
                }
            },
            "default" : [{
                "catname" : "best-of",
                "cattitle" : "Best of"
            }]
        },
        "headerlinks" : {"type" : "stack",
            "attr" : {"displayname" : "Header links",
                "scheme": {
                    "columns": [
                        {
                            "fieldName": "linktext",
                            "dataType": "text",
                            "displayname": "Link Text"
                        }, {
                            "fieldName": "url",
                            "dataType": "text",
                            "displayname": "Url"
                        }
                    ]
                }
            },
            "default": [{
                "linktext": "",
                "url": "//"
            }]
        },
        "sidebarbrowselinks" : {"type" : "stack",
            "attr" : {"displayname" : "Sidebar browse links",
                "scheme": {
                    "columns": [
                        {
                            "fieldName": "linktext",
                            "dataType": "text",
                            "displayname": "Link Text"
                        }, {
                            "fieldName": "url",
                            "dataType": "text",
                            "displayname": "Url"
                        }
                    ]
                }
            },
            "default": [{
                "linktext": "",
                "url": "//"
            }]
        },

        "adtags" : {"type" : "stack",
            "attr" : {"displayname" : "Ad tags, as HTML",
                "scheme": {
                    "columns": [
                        {
                            "fieldName": "identifier",
                            "dataType": "text",
                            "displayname": "Description"
                        }, {
                            "fieldName": "code",
                            "dataType": "text",
                            "displayname": "Markup"
                        }
                    ]
                }
            },
            "default": [{
                "identifier": "Advertising",
                "code": "<script></script>"
            }]
        },
        "pperads" : {"type" : "number", "attr" : {"displayname" : "Paragraphs per ads"}, "default" : 5},

        "facebook" : {"type" : "text", "attr" : {"displayname" : "Facebook Username"}, "default" : "Narcity"},
        "twitter" : {"type" : "text", "attr" : {"displayname" : "Twitter Username"}, "default" : "Narcity"},
        "googleplus" : {"type" : "text", "attr" : {"displayname" : "Google Plus Username"}, "default" : "Narcity"},
        "youtube" : {"type" : "text", "attr" : {"displayname" : "YouTube Username"}, "default" : "Narcity"},
        "instagram" : {"type" : "text", "attr" : {"displayname" : "Instagram Username"}, "default" : "Narcity"},

        "facebookpageid" : {"type" : "text", "attr" : {"displayname" : "Facebook Page ID"}, "default" : "Narcity"},
        "facebookappid" : {"type" : "text", "attr" : {"displayname" : "Facebook App ID"}, "default" : "Narcity"},

        "copyright" : {"type" : "text", "attr" : {"displayname" : "Copyright"}, "default" : "Narcity Media inc."},
        "abbreviation" : {"type" : "text", "attr" : {"displayname" : "abbreviation"}, "default" : "MTL"},
        "codetitle" : {"type" : "title", "attr" : {"displayname" : "Code insertion"}, "default" : "title"},
        "customcss" : {"type" : "textarea", "attr" : {"displayname" : "Custom plain CSS"}, "default" : ".logo {}"},
        "headprio" : {"type" : "textarea", "attr" : {"displayname" : "Top of head tag"}, "default" : "<script></script>"},
        "headend" : {"type" : "textarea", "attr" : {"displayname" : "End of head tag"}, "default" : "<script></script>"},
        "beforeheader" : {"type" : "textarea", "attr" : {"displayname" : "Before top header"}, "default" : "<script></script>"},
        "afterheader" : {"type" : "textarea", "attr" : {"displayname" : "After top header"}, "default" : "<script></script>"},
        "beforearticle" : {"type" : "textarea", "attr" : {"displayname" : "Before content"}, "default" : "<script></script>"},
        "afterarticle" : {"type" : "textarea", "attr" : {"displayname" : "After content"}, "default" : "<script></script>"},
        "bodyprio" : {"type" : "textarea", "attr" : {"displayname" : "Top of body tag"}, "default" : "<script></script>"},
        "bodyend" : {"type" : "textarea", "attr" : {"displayname" : "End of body tag"}, "default" : "<script></script>"},
        "sidetop" : {"type" : "textarea", "attr" : {"displayname" : "Top of Sidebar"}, "default" : "<div></div>"},
        "sidebottom" : {"type" : "textarea", "attr" : {"displayname" : "Bottom of sidebar"}, "default" : "<div></div>"}
    }
}
