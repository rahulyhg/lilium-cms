<!DOCTYPE html>
<html>
	<head>	
		{%globalhead}
	</head>
	<body>
		<h1>DFP Orders</h1>
		<ul>
			{*dfp.OrderService.getOrdersByStatement(statement:"WHERE status = 'DRAFT' OR status = 'APPROVED'",template:"orderItem")}
		</ul>

		<lml:template id="orderItem">
			<li>
				<lml:tobject data-nodetype="span" data-key="name"></lml:tobject>
				(
					<lml:tobject data-nodetype="span" data-key="id"></lml:tobject>
				)
				<div>Status : <lml:tobject data-nodetype="span" data-key="status"></lml:tobject></div>
			</li>
		</lml:template>
	</body>
</html>
