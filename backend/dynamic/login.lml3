const css = `

body, html {
    background : #fbfcff;
    font-family: "Lato", sans-serif;
    margin: 0;
    padding : 0;
    -webkit-font-smoothing: antialiased;
}

#left {
    position: fixed;
    top: 0;
    bottom: 0;
    left : 0;
    width: 50%;
    overflow: hidden;
}

#credit {
    position: fixed;
    bottom: 20px;
