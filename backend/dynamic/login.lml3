    position: relative;
    height: 250px;
    text-align : center;
}

input {
    display: block;
    margin: 12px auto;
    width: 250px;
    padding: 8px 10px;
    font-size: 16px;
    background: #fff;
    border: 1px solid #DDD;
    box-sizing: border-box;
}

#loginwrap {
    width: 250px;
    margin: auto;
    text-align: left;
}

#loginbutton {
    background: #fff;
    border: 1px solid #DDD;
    padding: 6px 11px;
    font-size: 14px;
    width: 100px;
}

