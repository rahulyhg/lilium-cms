    background: #FFF;
    color: #000;
    padding: 5px 7px;
    font-family: Arial;
    font-size: 12px;
}

#right {
    position: fixed;
    top: 0;
    bottom: 0;
    right : 0;
    width: 50%;
    background : #fff7eb;
}

#featuredimage {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: right;
    transition: all 60s;
    transition-timing-function: ease-in-out;
}

#featuredimage.right {
    object-position: left;
}

h1 {
    font-family: 'Leckerli One', cursive;
    font-size: 42px;
    text-align: center;
    color: #e0c299;
    position: relative;
    z-index : 10;
}

