var lmlAlert = function(msg, type, icon) {
    var html = '<div class="alert-wrapper lmlalert-top"><div class="alert alert-' + (type || 'info') + '" role="alert">' +
        '<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>' +
        '<i class="fa fa-' + (icon || "exclamation") + ' lmlalert-icon"></i>' + msg +
        '</div></div>';
    $('main.container.lmladminmain').prepend(html);
};
