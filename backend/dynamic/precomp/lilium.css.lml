html, body {
	padding:0;
	margin:0;

	font-family: 'Raleway', sans-serif;
	color: {=fontcolor};
}

body {
	opacity:1;
	-webkit-transition: opacity 0.2s;
   	   -moz-transition: opacity 0.2s;
	    -ms-transition: opacity 0.2s;
	     -o-transition: opacity 0.2s;
		transition: opacity 0.2s;
}

body.block-scroll {
    overflow: hidden;
}

body.lmlrendered {
	opacity: 1;
}

/* Scroll bars */
::-webkit-scrollbar {
  width: 9px;
  height: 9px;
}
::-webkit-scrollbar-button {
  width: 0px;
  height: 0px;
}
::-webkit-scrollbar-thumb {
  background: #d9d9d9;
  border: 0px none #ffffff;
  border-radius: 5px;

  -webkit-transition: all 0.2s;
  -moz-transition: all 0.2s;
  -ms-transition: all 0.2s;
  -o-transition: all 0.2s;
  transition: all 0.2s;
}
::-webkit-scrollbar-thumb:hover {
  background: {=liliumcolor};
}
::-webkit-scrollbar-thumb:active {
  background: {=liliumcolor};
}
::-webkit-scrollbar-track {
  background: #ffffff;
  border: none;
  border-radius: 5px;
}
::-webkit-scrollbar-track:hover {
  background: #d9d9d9;
}
::-webkit-scrollbar-track:active {
  background: #d9d9d9;
}
::-webkit-scrollbar-corner {
  background: transparent;
}

input, textarea, button {
	outline: none;
	border: none;
}

a {
	color: {=actioncolor};
}

a:hover {
	color: {=activecolor};
}

button, input[type="submit"] {
	cursor: pointer;
}

input[type="checkbox"], .lmlcheckbox {
	display: none;
}

.uppercase {
    text-transform: uppercase;
}

.lmlbeautifiedcheckbox {
	display: inline-block;
	width: 32px;
	height:32px;
	vertical-align: middle;

    font: normal normal normal 14px/1 FontAwesome;
    text-rendering: auto;
    -webkit-font-smoothing: antialiased;

	margin-right: 10px;
	cursor: pointer;

    font-size: 26px;
    text-align: center;
    padding-top: 2px;

    border: 1px dashed #CCC;
    border-radius: 5px;
}


.lmlbeautifiedcheckbox::before {
    color: #E84C3D;
    content: "\f00d";
}

.lmlbeautifiedcheckbox.checked::before {
    content: "\f00c";
    color : #2ECD71;
}

form .campaigncreatefield-checkbox label {
	display: inline-block;
}

