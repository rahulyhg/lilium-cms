input[type="submit"], .btn, button {
    display: inline-block;
    padding: 12px;
    background-color: #Af57E4;
    color: #FFF;
    text-transform: uppercase;                                                                                                          
    font-weight: bold;
    border-bottom: 3px solid #793b9e;                                                                                                   
    cursor: pointer;
       
    -webkit-touch-callout: none; 
      -webkit-user-select: none;
       -khtml-user-select: none;
         -moz-user-select: none;
          -ms-user-select: none;
              user-select: none

    border-radius: 2px;
    margin-right: 6px;
}

input[type="submit"] .fa, .btn .fa, button .fa {
    margin-right: 4px;
}

input[type="submit"].small, .btn.small, button.small {
    font-size: 14px;
    padding: 8px 10px;
}

input[type="submit"]::before, .btn::before, button::before {
    display: inline-block;
    margin-right: 8px;

    font-family: "Font Awesome 5 Pro";
    font-style: normal;
    font-variant: normal;
    text-rendering: auto;
    line-height: 1;
}

input[type="submit"]:hover, .btn:hover, button:hover, 
input[type="submit"]:focus, .btn:focus, button:focus {
    background-color: #Bf67F4;
    text-decoration: none;
    box-shadow : 0px 0px 10px rgba(255, 255, 255, 0.3) inset;
    color: #FFF;
}

input[type="submit"]:active, .btn:active, button:active {
    border-bottom-width: 1px;
    background-color: #995bBe;
    box-shadow : 0px 0px 10px rgba(0, 0, 0, 0.2) inset;
    color: #FFF;

    margin-bottom: 2px;

    -webkit-transform: translate3d(0, 2px, 0);
       -moz-transform: translate3d(0, 2px, 0);
        -ms-transform: translate3d(0, 2px, 0);
         -o-transform: translate3d(0, 2px, 0);
            transform: translate3d(0, 2px, 0);
}

input[type="submit"].red, .btn.red, button.red {
    background-color: #e04646;
    bottom-border-color: #9e3b3b;
}

input[type="submit"].red:hover, .btn.red:hover, button.red:hover, 
input[type="submit"].red:focus, .btn.red:focus, button.red:focus {
    background-color: #f46767;
}

input[type="submit"].red:active, .btn.red:active, button.red:active {
    background-color: #c02626;
}

input[type="submit"].blue, .btn.blue, button.blue { 
    background-color: #337ab7;
    border-color: #2e6da4;
}

input[type="submit"].blue:hover, .btn.blue:hover, button.blue:hover, 
input[type="submit"].blue:focus, .btn.blue:focus, button.blue:focus {
    background-color: #438ac7;
}

input[type="submit"].blue:active, .btn.blue:active, button.blue:active {
    background-color: #236aa7;
}

input[type="submit"].green, .btn.green, button.green { 
    background-color: #3bbf1b;
    border-color: #30962f;
}

input[type="submit"].green:active, .btn.green:active, button.green:active {
    background-color: #2d9015;
}

