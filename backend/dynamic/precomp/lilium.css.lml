.lmlform input.lmleditable-seemless:focus {
    background-color: #EEE;
}

.lmlform input.lmleditable-seemless:hover:active {
    background-color: #DDD;
}

.lmlform input.lmleditable-seemless:hover {
    background-color: #F3F3F3;
}

.lmlform button.green {
    background-color: #45ad2b;
    color: #FFF;
    border: 1px solid #1f861f;
    box-shadow: 0px 0px 3px 0px rgba(89, 182, 100, 0.59);
}

.lmlform button.green:hover {
    background-color: #4cc52e;
}

.lmlform button.green:hover:active {
    background-color: #40902d;
}

.lmlform .secret-group-wrapper button {
    margin: 0px 10px 0px 0px;
}

/* Select cards */
.select-card {
    display: inline-block;
    height: 300px;
    width: 280px;
    margin: 10px;
    padding: 15px;
    background-color: #FFF;
    box-shadow: 0px 0px 5px rgba(0,0,0,0.2);
    border-radius: 6px;
    position: relative;
    overflow: hidden;
}

.select-card:hover {
    background-color: #F6F6F6;
}

.select-card .fa {
    display: block;
    position: absolute;
    right: -40px;
    top: -46px;
    font-size: 178px;
    transform: rotateZ(30deg);
    color: #000;
    opacity: 0.1; 
}

.select-card a {
    width: 100%;
    height: 100%;
    position: relative;
    display: block;
}

.select-card-text-content {
    position: absolute;
    bottom: 0px;
    left: 0px;
    right: 0px;
    color: #333;
}

.select-card h2 {
    font-size: 22px;
    font-weight: 600;
}

.select-card p {
    font-weight: 400;
    color: #777;
}

