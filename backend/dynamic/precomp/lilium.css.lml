.lmladmin:not(.role-admin):not(.role-lilium) .role-admin { display: none; }
.lmladmin:not(.role-lilium) .role-lilium { display: none; }

@-webkit-keyframes slowfloat {
    0%   { -webkit-transform: translate3d(0, 0px,  0); }
    50%  { -webkit-transform: translate3d(0, -30px, 0); }
    100% { -webkit-transform: translate3d(0, 0px,  0); }
}

@-moz-keyframes slowfloat {
    0%   { -moz-transform: translate3d(0, 0px,  0); }
    50%  { -moz-transform: translate3d(0, -30px, 0); }
    100% { -moz-transform: translate3d(0, 0px,  0); }
}   

@keyframes slowfloat {
    0%   { transform: translate3d(0, 0px,  0); }
    50%  { transform: translate3d(0, -30px, 0); }
    100% { transform: translate3d(0, 0px,  0); }
}

@keyframes rew {
    0%   { transform: translate3d(0px,   0px, 0px); opacity: 1;   }
    50%  { transform: translate3d(-30px, 0px, 0px); opacity: 0; }
    51%  { transform: translate3d(30px, 0px, 0px); opacity: 0; }
    100% { transform: translate3d(0px,   0px, 0px); opacity: 1;   }
}   

@keyframes drop {
    0%   { transform: translate3d(0px,   0px, 0px); opacity: 1;   }
    10%   { transform: translate3d(0px,   0px, 0px); opacity: 1;   }
    80%  { transform: translate3d(0px,  30px, 0px); opacity: 0; }
    81%  { transform: translate3d(0px,   0px, 0px); opacity: 0; }
    100% { transform: translate3d(0px,   0px, 0px); opacity: 1;   }
}   

.slowrotate {
    -webkit-animation : slowrotate 5s infinite;
       -moz-animation : slowrotate 5s infinite;
        -ms-animation : slowrotate 5s infinite;
         -o-animation : slowrotate 5s infinite;
            animation : slowrotate 5s infinite;
}

.quickrotate {
    -webkit-animation: slowrotate 1s infinite linear;
       -moz-animation: slowrotate 1s infinite linear;
        -ms-animation: slowrotate 1s infinite linear;
         -o-animation: slowrotate 1s infinite linear;
            animation: slowrotate 1s infinite linear;
}

@-webkit-keyframes  slowrotate { 0% { transform : rotateZ(0deg) } 100% { transform : rotateZ(360deg) }}
@-moz-keyframes     slowrotate { 0% { transform : rotateZ(0deg) } 100% { transform : rotateZ(360deg) }}
@-ms-keyframes      slowrotate { 0% { transform : rotateZ(0deg) } 100% { transform : rotateZ(360deg) }}
@-o-keyframes       slowrotate { 0% { transform : rotateZ(0deg) } 100% { transform : rotateZ(360deg) }}
@keyframes          slowrotate { 0% { transform : rotateZ(0deg) } 100% { transform : rotateZ(360deg) }}
