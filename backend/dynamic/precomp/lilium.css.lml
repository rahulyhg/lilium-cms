/* Lilium */
/* Bootstrap */
.container {
    padding-left: 200px;
    width: 100%;
    padding-right: 0px;
}
.row{
    margin-right: 0px;
    margin-left: 0px;
}

/* Normalized Forms */
.lmlform {
	background-color: #F6F6F6;
	border-top: 1px solid #DDD;
	border-bottom: 1px solid #DDD;
}

.lmlform.no-back {
    background-color: transparent;
    border: none;
}

.lmlform select {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance : none;

    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.lmldom-liveselect-opt-none {
    font-weight: bold;
    color: #333;
}

.lmldom-treeselect {
    height: 200px;
    background-color: #FFF;
    border: 1px solid #EEE;
    overflow-y: auto;
}

.lmldom-treeselect-pane {
    display: none;
}

.lmldom-treeselect-pane.visible {
    display: block;
}

.lmldom-treeselect-pane.treeview-pane-selection-child {
    margin-left: 20px;
}

.treeview-pane-selection {
    padding: 4px 6px;
    border-bottom: 1px solid #EEE;
    cursor: pointer;

    position: relative;
}

.treeview-pane-selection.selected {
    background-color: #9b59b6;
    color: #FFF;
    font-weight: 700;
}

.treeview-pane-selection:not(.selected):hover {
    background-color: #F6F6F6;
}

.treeview-pane-selection.treeview-pane-selection-has-children::after {
    display: inline-block;
    font: normal normal normal 14px/1 FontAwesome;
    font-size: inherit;
    text-rendering: auto;
    -webkit-font-smoothing: antialiased;

    content: "\f105";

    position: absolute;
    right: 8px;
    top: 5px;
    font-size: 18px;

    color: #999;

    -webkit-transition: all 0.2s;
       -moz-transition: all 0.2s;
        -ms-transition: all 0.2s;
         -o-transition: all 0.2s;
            transition: all 0.2s;
}

.treeview-pane-selection.treeview-pane-selection-has-children.selected::after {
    color: #FFF;
    -webkit-transform: rotateZ(90deg);
       -moz-transform: rotateZ(90deg);
        -ms-transform: rotateZ(90deg);
         -o-transform: rotateZ(90deg);
            transform: rotateZ(90deg);
}

.theme-setting-field-textarea textarea {
    height: 200px;
}

.select-wrapper:before {
    content: '\f0d7';
    font-family: FontAwesome;
    color: #fff;
    display: inline-block;
    position: absolute;
    right: 20px;
    top: 15px;
    pointer-events: none;
}

.lmlform select::-ms-expand {
    display: none;
}

.lmlform-fieldwrapper {
	padding: 10px;
}

.lmlform-fieldwrapper.postleaf-wrapper {
    padding: 0px;
}

.lmlform-fieldwrapper-title {
    clear: both;
    float: none;
    display: block;
}

.lmlform-fieldwrapper-hidden {
    display: none;
}

.lmlform-fieldwrapper label {
	margin-right: 10px;
}

.lmlform-fieldwrapper label.inline, .lmlform input.inline,
.lmlform select.inline, .lmlform textarea.inline {
	display: inline-block;
}

.lmlform input:not([type="file"]), .lmlform select, .lmlform textarea {
	padding: 10px;
