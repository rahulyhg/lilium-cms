/* Lilium */
/* Bootstrap */
.row{
    margin-right: 0px;
    margin-left: 0px;
}

/* Normalized Forms */
.lmlform {
	background-color: #F6F6F6;
	border-top: 1px solid #DDD;
	border-bottom: 1px solid #DDD;
}

.lmlform.no-back {
    background-color: transparent;
    border: none;
}

.lmlform select {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance : none;

    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.lmldom-liveselect-opt-none {
    font-weight: bold;
    color: #333;
}

.lmldom-treeselect {
    height: 200px;
    background-color: #FFF;
    border: 1px solid #EEE;
    overflow-y: auto;
}

.lmldom-treeselect-pane {
    display: none;
}

.lmldom-treeselect-pane.visible {
    display: block;
}

.lmldom-treeselect-pane.treeview-pane-selection-child {
    margin-left: 20px;
}

.treeview-pane-selection {
    padding: 4px 6px;
    border-bottom: 1px solid #EEE;
    cursor: pointer;

    position: relative;
}

.treeview-pane-selection.selected {
    background-color: {=liliumcolor};
    color: #FFF;
    font-weight: 700;
}

.treeview-pane-selection:not(.selected):hover {
    background-color: #F6F6F6;
}

.treeview-pane-selection.treeview-pane-selection-has-children::after {
    display: inline-block;

    font-family: "Font Awesome 5 Pro";
    font-style: normal;
    font-variant: normal;
    text-rendering: auto;
    line-height: 1;

    content: "\f105";

    position: absolute;
    right: 8px;
    top: 5px;
    font-size: 18px;

    color: #999;

    -webkit-transition: all 0.2s;
       -moz-transition: all 0.2s;
        -ms-transition: all 0.2s;
         -o-transition: all 0.2s;
            transition: all 0.2s;
}

.treeview-pane-selection.treeview-pane-selection-has-children.selected::after {
    color: #FFF;
    -webkit-transform: rotateZ(90deg);
       -moz-transform: rotateZ(90deg);
        -ms-transform: rotateZ(90deg);
         -o-transform: rotateZ(90deg);
            transform: rotateZ(90deg);
}

.theme-setting-field-textarea textarea {
    height: 200px;
}

.select-wrapper:before {
    content: '\f0d7';
    color: #fff;
    display: inline-block;
    position: absolute;
    right: 20px;
    top: 15px;
    pointer-events: none;


    font-family: "Font Awesome 5 Pro";
    font-style: normal;
    font-variant: normal;
    text-rendering: auto;
    line-height: 1;
}

.lmlform select::-ms-expand {
    display: none;
}

.lmlform-fieldwrapper {
	padding: 10px;
}

.lmlform-fieldwrapper.postleaf-wrapper {
    padding: 0px;
}

.lmlform-fieldwrapper-title {
    clear: both;
    float: none;
    display: block;
    padding-top: 30px;
}

.lmlform-fieldwrapper-hidden {
    display: none;
}

.lmlform-fieldwrapper label {
	margin-right: 10px;
    margin-bottom: 5px;
    color: #333;
    font-size: 16px;
    font-weight: 500;
}

.lmlform-fieldwrapper label.inline, .lmlform input.inline,
.lmlform select.inline, .lmlform textarea.inline {
	display: inline-block;
}

.lmlform input:not([type="file"]):not([type="submit"]), .lmlform select, .lmlform textarea {
	padding: 10px;
	font-size: 14px;
	width: 100%;
    box-sizing: border-box;
	border: 1px solid transparent;
    border-left: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.1);

    color: #111;
}

.lmlform .ck-image-credit-field-text input {
    background-color: #FFF;
}

.lmlform input.lmleditable-seemless {
    padding: 3px 5px;
    margin: 0px 5px;
    background: transparent;
    border: none;
    box-shadow: none;
    display: inline-block;
    width: auto;
}

.lmlform input.lmleditable-seemless.no-pad {
    margin: 0px;
    padding: 0px;
}

.lmlform input.lmleditable-seemless:focus {
    background-color: #EEE;
}

.lmlform input.lmleditable-seemless:hover:active {
    background-color: #DDD;
}

.lmlform input.lmleditable-seemless:hover {
    background-color: #F3F3F3;
}

.lmlform button.green {
    background-color: #45ad2b;
    color: #FFF;
    border-bottom-color: #1f861f;
}

.lmlform button.green:hover {
    background-color: #4cc52e;
}

.lmlform button.green:hover:active {
    background-color: #40902d;
}

.lmlform .secret-group-wrapper button {
    margin: 0px 10px 0px 0px;
}

/* LML Bunch default style */
lml-bunch {
    display: none;
}

.bunch-filters {
    border-bottom: 1px solid #DDD;
    background-color: #FCFCFC;
    padding: 5px;
}

.bunch-filters-title {
    display: inline-block;
    margin: -5px 2px -5px -5px;
    padding: 5px 10px;
    border-right: 1px dashed #DDD;
    font-size: 16px;
    color: #CCC;
}

.bunch-filters input {
    border: 1px solid #AAA;
    background-color: #FCFCFC;
    padding: 0px 3px;
    width: 180px;
}

.bunch-filters input {
    min-width: 100px;
}

.bunch-filters input, 
.bunch-filters select {
    padding: 3px;
}

.bunch-filters label {
    margin: 0px 5px 0px 5px;
    color: #333;
}

/* Select cards */
.select-card {
    display: inline-block;
    height: 300px;
    width: 280px;
    margin: 10px;
    padding: 15px;
    background-color: #FFF;
    box-shadow: 0px 0px 5px rgba(0,0,0,0.2);
    border-radius: 6px;
    position: relative;
    overflow: hidden;
}

.select-card:hover {
    background-color: #F6F6F6;
}

.select-card .fa {
    display: block;
    position: absolute;
    right: -40px;
    top: -46px;
    font-size: 178px;
    transform: rotateZ(30deg);
    color: #000;
    opacity: 0.1; 
}

.select-card a {
    width: 100%;
    height: 100%;
    position: relative;
    display: block;
}

.select-card-text-content {
    position: absolute;
    bottom: 0px;
    left: 0px;
    right: 0px;
    color: #333;
}

.select-card h2 {
    font-size: 22px;
    font-weight: 600;
}

.select-card p {
    font-weight: 400;
    color: #777;
}

/* Secrets */
.secret-group-wrapper {
    margin: 10px;
    padding: 10px;
    border: 1px solid #CCC;
    background-color: #FCFCFC;
    box-shadow: 0px 0px 3px 1px rgba(0,0,0,0.1);
}

.secret-group-wrapper h2 {
    border-bottom: 1px solid #EEE;
    margin: -10px -10px 10px;
    padding: 10px;
    background-color: #333;
    color: #DDD;
    font-weight: 300;
    font-size: 26px;
}

.secrets-wrapper {
    margin: 10px 0px;
}

.modal-body input[type="text"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #DDD;
    margin-bottom: 10px;
    font-size: 14px;
}

.modal-footer .btn-default {
    color: #333;
}

.btn-default {
    
}

.modal-header .close {
    margin-top: -2px;
    font-size: 36px;
    right: 10px;
}

.secret-combo-wrapper {
    margin-bottom: 10px;
    padding-bottom: 10px;
    border-bottom: 1px dashed #ccc;
}

.secret-combo-password-hidden {
    cursor: pointer;

    -webkit-filter: blur(3px);
       -moz-filter: blur(3px);
        -ms-filter: blur(3px);
         -o-filter: blur(3px);
            filter: blur(3px);

    -webkit-transition: all 0.2s;
       -moz-transition: all 0.2s;
        -ms-transition: all 0.2s;
         -o-transition: all 0.2s;
            transition: all 0.2s;

    font-weight: 500;
    color: #999;
}

.secret-combo-password-hidden.shown {
    cursor: text;

    -webkit-filter: blur(0px);
       -moz-filter: blur(0px);
        -ms-filter: blur(0px);
         -o-filter: blur(0px);
            filter: blur(0px);
}

.cke_dialog #image-upload h1 {
